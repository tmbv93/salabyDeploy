
    <%= form_for(:session, url: login_path) do |f| %>
<img draggable="false" src="/assets/barn/skoleveien.jpg" id="background-image" alt="bakgrunnsbilde">
<div id="UserWrapper">
    <div class="row">
        <div class="large-12 medium-12 small-12 columns">
            <div class="panel">
                <div class="flash-message-box"><strong class="flash-message-text"><%= flash[:alert] %></strong></div>
                    <label>Brukernavn</label>
                        <%= f.text_field :username, class: 'form-control', id: 'usernameEntryField', placeholder: 'Brukernavn' %>

                    <label>Passord</label>
                        <%= f.password_field :password, class: 'form-control', placeholder: 'Passord' %>

        <div class="large-6 large-centered medium-12 small-12  columns">
            <%= f.submit "Logg inn", class: "btn btn-primary button", id: 'mainLoginButton' %>
                <% end %>
        </div>
                <p>Ny bruker? <%= link_to "Lag en konto!", signup_path %></p>

            </div>
        </div>
    </div>
</div>

