<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <p><label><strong>Fornavn</strong></label>
         <%= f.label @user.first_name %></p>

        <p><label><strong>Etternavn</strong></label>
          <%= f.label @user.last_name %></p>

        <p><label><strong>Brukernavn</strong></label>
        <%= f.label @user.username %></p>

        <label>Endre beskrivelse</label>
        <%= f.text_area :description %>

        <br>
        <label>Nytt passord</label>
        <%= f.password_field :password %>

        <label>Gjenta passordet</label>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Large endringer", class: "button expand" %>
    <% end %>
  </div>
</div>