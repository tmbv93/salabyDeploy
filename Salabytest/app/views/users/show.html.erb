

<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Salaby | Min Side</title>
  <link rel="stylesheet" href="/assets/shared/userpageStyle.css" />

    

</head>

<body>

<%= render 'shared/page_header' %>

    
<div id="wrapper">
    <div class="row">
        <div class="large-12 columns">
            <div class="panel">
                <div id="userInfo">
                    <% if logged_in? %>
                        <p>Dette er deg!</p>
                    <h1>Profilside</h1>
                        <p>Her er informasjon om deg og annen viktig informasjon</p>
                    <p>
                      <strong>Navn:</strong>
                        <%= current_user.first_name %> <%= current_user.last_name %>
                    </p>
                        <%= link_to 'Endre innstillinger', edit_user_path(@user) %> 
                    </div>
                </div>
                <div class="row">
                    <% if current_user.class_admin? %>
                    <div class="large-8 columns">
                  <div class="panel">
                    <div id="classesArea">
                      <h3>Klasser</h3>
                      <%=link_to "Lag ny klasse", new_department_path %>

                    </div>
                  </div>
                </div>
                    <!--SLUTT PÅ AREA-->
                    <% else %>
                    <div class="large-8 columns">
                            <div class="panel">
                                <div id="homeworkArea">    
                                    <h3>Lekser</h3>
                                  <% #Lekser renderes her %>
                                </div>
                        </div>
                    </div>
                    <% end %>
                    <!--SLUTT PÅ AREA-->
                    <div class="large-4 columns">
                        <div class="panel">
                            <div id="favorites">  
                                <h3>Favoritter</h3>
                                <ul>
                                    <li>RLE</li>
                                    <li>NORSK</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                  <%end%>

<%= render 'shared/page_footer' %>



</body>

</html>
